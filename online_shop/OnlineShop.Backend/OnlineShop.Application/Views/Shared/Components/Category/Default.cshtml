@model IEnumerable<OnlineShop.UseCases.Category.Presenter.CategoryVM>
<div class="sidebar__categories">
    <div class="section-title">
        <h4>Categories</h4>
    </div>
    <div class="categories__accordion">
        <div class="accordion" id="accordionExample">
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-heading active">
                        <a asp-controller="Shop" asp-action="ListByCategory" asp-route-id="@item.Id">@item.Name</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>